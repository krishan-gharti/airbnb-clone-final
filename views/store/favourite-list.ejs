
<%- include ('../partials/head') %>
</head>
<body class="bg-gradient-to-br from-blue-50 to-purple-100 min-h-screen">
<%- include('../partials/header') %>
    <div class="container mx-auto py-10 px-4">
        <h1 class="text-3xl text-center font-extrabold mb-10 text-purple-700 drop-shadow-lg">Our Favourite Homes</h1>
        <div class="grid w-full sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
            <% favouriteHomes.forEach (home => { %>
                <div class="bg-white rounded-2xl shadow-xl border border-gray-100 hover:shadow-2xl transition-shadow duration-300 flex flex-col overflow-hidden">
                    <img src="<%= home.photo %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover rounded-t-2xl">
                    <div class="flex-1 flex flex-col gap-2 px-5 py-4">
                        <h2 class="text-lg font-bold text-gray-800 mb-1 truncate"><%= home.houseName %></h2>
                        <p class="text-gray-500 text-sm"><span class="font-medium text-gray-700">Location:</span> <%= home.location %></p>
                        <p class="text-gray-500 text-sm">
                            <span class="font-medium text-gray-700">Price:</span> <span class="text-green-600 font-semibold">Rs.<%= home.price %></span>
                        </p>
                        <div class="flex items-center mt-1">
                            <span class="text-yellow-400 mr-2 text-base">
                                <% for(let i = 0; i < home.rating; i++) { %>
                                    &#9733;
                                <% } %>
                            </span>
                            <span class="text-gray-400 text-xs">(<%= home.rating %>/5)</span>
                        </div>
                    </div>  
                    <form action="/favourites/delete/<%= home._id %>" method="POST" class="px-5 pb-5">
                        <button type="submit" class="bg-gradient-to-r from-red-500 to-pink-500 hover:from-red-600 hover:to-pink-600 text-white font-semibold py-2 px-4 rounded-lg w-full shadow-md transition-all duration-200">Remove from favourites</button>
                    </form>   
                </div>
            <% }) %>
        </div>
        <% if (favouriteHomes.length === 0) { %>
            <div class="text-center text-gray-500 mt-16 text-lg">No favourites yet. Start adding some!</div>
        <% } %>
    </div>
</body>
</html>