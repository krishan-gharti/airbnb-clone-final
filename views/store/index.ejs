<%- include ('../partials/head') %>
</head>
<body class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen">
<%- include('../partials/header') %>
    <div class="container mx-auto py-10 px-4">
        <h1 class="text-3xl text-center font-extrabold mb-10 text-blue-600 drop-shadow">Our Featured Homes</h1>
        <div class="grid w-full sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
            <% registeredHomes.forEach (home => { %>
                <div class="bg-white rounded-2xl shadow-lg border border-gray-100 hover:shadow-2xl transition-shadow duration-300 flex flex-col overflow-hidden">
                    <img src="<%= home.photo %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover rounded-t-2xl">
                    <div class="flex-1 flex flex-col gap-2 px-5 py-4">
                        <h2 class="text-lg font-bold text-indigo-800 mb-1 truncate"><%= home.houseName %></h2>
                        <p class="text-gray-600 text-sm"><span class="font-medium">Location:</span> <%= home.location %></p>
                        <p class="text-gray-600 text-sm"><span class="font-medium">Price/Night:</span> <span class="text-green-600 font-semibold">Rs.<%= home.price %></span></p>
                        <div class="flex items-center mt-1">
                            <span class="text-yellow-400 mr-1 text-base">
                                <% for(let i = 0; i < home.rating; i++) { %>
                                    &#9733;
                                <% } %>
                            </span>
                            <span class="text-gray-400 text-xs">(<%= home.rating %>/5)</span>
                        </div>
                        <button class="mt-4 bg-indigo-600 hover:bg-indigo-700 transition-colors text-white font-semibold py-2 rounded-lg shadow text-sm">Book</button>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>