<header class="bg-white shadow-lg w-full h-20 flex items-center justify-between px-10 py-2 sticky top-0 z-50">
        <!-- Logo / Brand -->
        <a href="/" class="flex items-center space-x-3 group">
                <span class="text-3xl font-extrabold text-blue-600 flex items-center tracking-tight group-hover:text-blue-700 transition">
                        <svg class="w-8 h-8 mr-2 text-blue-500 group-hover:text-blue-700 transition" fill="none" stroke="currentColor" stroke-width="2.2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l9-9 9 9M4 10v10a1 1 0 001 1h3m10-11v10a1 1 0 01-1 1h-3m-6 0h6"></path>
                        </svg>
                        Airbnb
                </span>
        </a>
        <nav class="flex items-center space-x-2 md:space-x-4">
                <% if(isLoggedIn){%>
                        <% if(user && user.userType === 'guest'){%>
                                <a href="/" class="<%= currentPage==='index' ? 'bg-blue-100 text-blue-700 font-bold' : 'hover:bg-blue-50 font-semibold' %> px-5 py-2 rounded-lg transition flex items-center space-x-2 shadow-sm">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2.2" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l9-9 9 9M4 10v10a1 1 0 001 1h3m10-11v10a1 1 0 01-1 1h-3m-6 0h6"></path>
                                        </svg>
                                        <span>Home</span>
                                </a>
                                <a href="/homes" class="<%= currentPage==='homes' ? 'bg-blue-100 text-blue-700 font-bold' : 'hover:bg-blue-50 font-semibold' %> px-5 py-2 rounded-lg transition flex items-center space-x-2 shadow-sm">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2.2" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M8 10h.01M12 10h.01M16 10h.01M21 16V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2h14a2 2 0 002-2z"></path>
                                        </svg>
                                        <span>Homes List</span>
                                </a>
                                <a href="/bookings" class="<%= currentPage==='bookings' ? 'bg-blue-100 text-blue-700 font-bold' : 'hover:bg-blue-50 font-semibold' %> px-5 py-2 rounded-lg transition flex items-center space-x-2 shadow-sm">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2.2" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                        </svg>
                                        <span>Bookings</span>
                                </a>
                                <a href="/favourites" class="<%= currentPage==='favourites' ? 'bg-blue-100 text-blue-700 font-bold' : 'hover:bg-blue-50 font-semibold' %> px-5 py-2 rounded-lg transition flex items-center space-x-2 shadow-sm">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2.2" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 016.364 0L12 7.636l1.318-1.318a4.5 4.5 0 116.364 6.364L12 21.364l-7.682-7.682a4.5 4.5 0 010-6.364z"></path>
                                        </svg>
                                        <span>Favourites</span>
                                </a>
                        <% } else { %>
                                <a href="/host/add-home" class="<%= currentPage==='addHome' ? 'bg-blue-100 text-blue-700 font-bold' : 'hover:bg-blue-50 font-semibold' %> px-5 py-2 rounded-lg transition flex items-center space-x-2 shadow-sm">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2.2" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"></path>
                                        </svg>
                                        <span>Add Home</span>
                                </a>
                                <a href="/host/host-home-list" class="<%= currentPage==='host-homes' ? 'bg-blue-100 text-blue-700 font-bold' : 'hover:bg-blue-50 font-semibold' %> px-5 py-2 rounded-lg transition flex items-center space-x-2 shadow-sm">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2.2" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M20 21V7a2 2 0 00-2-2H6a2 2 0 00-2 2v14"></path>
                                        </svg>
                                        <span>Host Homes List</span>
                                </a>
                        <% } %>
                <% } %>
                <% if (!isLoggedIn) { %>
                        <a href="/signup" class="hover:bg-blue-50 text-gray-700 font-semibold px-5 py-2 rounded-lg transition flex items-center space-x-2 shadow-sm">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2.2" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M16 21v-2a4 4 0 00-8 0v2M12 11a4 4 0 100-8 4 4 0 000 8z"></path>
                                </svg>
                                <span>Sign Up</span>
                        </a>
                        <a href="/login" class="hover:bg-blue-50 text-gray-700 font-semibold px-5 py-2 rounded-lg transition flex items-center space-x-2 shadow-sm">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2.2" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M5.121 17.804A13.937 13.937 0 0112 15c2.5 0 4.847.655 6.879 1.804M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                </svg>
                                <span>Login</span>
                        </a>
                <% } else { %>
                        <form action="/logout" method="POST" class="inline">
                                <button type="submit" class="hover:bg-blue-50 text-gray-700 font-semibold px-5 py-2 rounded-lg transition flex items-center space-x-2 shadow-sm">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2.2" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a2 2 0 01-2 2H7a2 2 0 01-2-2V7a2 2 0 012-2h4a2 2 0 012 2v1"></path>
                                        </svg>
                                        <span>Logout</span>
                                </button>
                        </form>
                <% } %>
        </nav>
</header>
