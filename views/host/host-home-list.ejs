<%- include ('../partials/head') %>
</head>
<body class="bg-gray-50 min-h-screen">
<%- include('../partials/header') %>
    <div class="container mx-auto py-8 px-4">
        <h1 class="text-3xl text-center font-extrabold mb-8 text-blue-700 drop-shadow">Here are our host homes</h1>
        <div class="grid w-full sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
            <% registeredHomes.forEach (home => { %>
                <div class="bg-white rounded-xl shadow-lg border border-gray-200 hover:shadow-2xl transition-shadow duration-300 flex flex-col">
                    <img src="<%= home.photo %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover rounded-t-xl">
                    <div class="flex-1 flex flex-col gap-2 px-5 py-4">
                        <h2 class="text-lg font-bold text-gray-800 mb-1 truncate"><%= home.houseName %></h2>
                        <p class="text-gray-600 text-sm"><span class="font-medium text-blue-600">Location:</span> <%= home.location %></p>
                        <p class="text-gray-600 text-sm"><span class="font-medium text-blue-600">Price/Night:</span> <span class="text-green-600 font-semibold">Rs.<%= home.price %></span></p>
                        <div class="flex items-center mt-1">
                            <span class="text-yellow-400 mr-1 text-base">
                                <% for(let i = 0; i < home.rating; i++) { %>
                                    &#9733;
                                <% } %>
                            </span>
                            <span class="text-gray-500 text-xs">(<%= home.rating %>/5)</span>
                        </div>
                    </div>
                    <div class="flex justify-between px-5 pb-4">
                        <a href="/host/edit-home/<%=home._id%>?editing=true" class="bg-blue-500 hover:bg-blue-600 font-semibold px-4 py-2 text-sm text-white rounded shadow transition">Edit</a>
                        <form action="/host/delete-home/<%=home._id%>" method="POST">
                            <button class="bg-red-500 hover:bg-red-600 font-semibold px-4 py-2 text-sm text-white rounded shadow transition" type="submit">Delete</button>
                        </form>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>